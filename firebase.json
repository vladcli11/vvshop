{
  "functions": {
    "source": "functions",
    "runtime": "nodejs20",
    "ignore": ["node_modules", ".git", "firebase-debug.log"],
    "predeploy": ["npm --prefix \"$RESOURCE_DIR\" run lint"]
  },
  "hosting": {
    "public": "dist",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "headers": [
      {
        "source": "/js/**/*.js",
        "headers": [
          {
            "key": "Content-Type",
            "value": "text/javascript"
          },
          {
            "key": "Cache-Control",
            "value": "public, max-age=31536000, immutable"
          }
        ]
      },
      {
        "source": "/assets/**/*.@(webp|png|jpg|jpeg|svg|ico)",
        "headers": [
          {
            "key": "Content-Type",
            "value": "image/webp"
          },
          {
            "key": "Cache-Control",
            "value": "public, max-age=31536000, immutable"
          }
        ]
      },
      {
        "source": "/css/**/*.css",
        "headers": [
          {
            "key": "Content-Type",
            "value": "text/css"
          },
          {
            "key": "Cache-Control",
            "value": "public, max-age=31536000, immutable"
          }
        ]
      }
    ],
    "rewrites": [
      {
        "source": "/js/**",
        "destination": "/js/**"
      },
      {
        "source": "/assets/**",
        "destination": "/assets/**"
      },
      {
        "source": "/css/**",
        "destination": "/css/**"
      },
      {
        "source": "/img/**",
        "destination": "/img/**"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
